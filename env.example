# PostgreSQL Database
POSTGRES_DB=auth_db
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_password

# Auth Service
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_JWT_SECRET=your-super-secret-jwt-key-change-in-production
AUTH_SERVICE_JWT_EXPIRES_IN=1d
AUTH_SERVICE_DATABASE_URL=postgresql://auth_user:auth_password@postgres:5432/auth_db

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_AUTH_SERVICE_URL=http://auth:3001

# MinIO Storage
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=media-bucket

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=rabbitmq_user
RABBITMQ_PASSWORD=rabbitmq_password
RABBITMQ_VHOST=/

# Development
NODE_ENV=development
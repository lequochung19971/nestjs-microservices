# PostgreSQL Database
POSTGRES_DB=auth_db
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_password

# Auth Service
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_JWT_SECRET=your-super-secret-jwt-key-change-in-production
AUTH_SERVICE_JWT_EXPIRES_IN=1d
AUTH_SERVICE_DATABASE_URL=postgresql://auth_user:auth_password@postgres:5432/auth_db

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_AUTH_SERVICE_URL=http://auth:3001

# Development
NODE_ENV=development 
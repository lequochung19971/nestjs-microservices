{
  "name": "nest-shared",
  "version": "0.0.1",
  "description": "NestJS Shared Library",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "default": "./dist/utils/index.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./jwt-auth": {
      "default": "./dist/jwt-auth/index.js",
      "require": "./dist/jwt-auth/index.js",
      "types": "./dist/jwt-auth/index.d.ts"
    },
    "./keycloak": {
      "default": "./dist/keycloak/index.js",
      "require": "./dist/keycloak/index.js",
      "types": "./dist/keycloak/index.d.ts"
    },
    "./rabbitmq": {
      "default": "./dist/rabbitmq/index.js",
      "require": "./dist/rabbitmq/index.js",
      "types": "./dist/rabbitmq/index.d.ts"
    },
    "./contracts": {
      "default": "./dist/contracts/index.js",
      "require": "./dist/contracts/index.js",
      "types": "./dist/contracts/index.d.ts"
    },
    "./api-clients/users": {
      "default": "./dist/api-clients/users-api.generated.js",
      "require": "./dist/api-clients/users-api.generated.js",
      "types": "./dist/api-clients/users-api.generated.d.ts"
    },
    "./api-clients/products": {
      "default": "./dist/api-clients/products-api.generated.js",
      "require": "./dist/api-clients/products-api.generated.js",
      "types": "./dist/api-clients/products-api.generated.d.ts"
    },
    "./api-clients/media": {
      "default": "./dist/api-clients/media-api.generated.js",
      "require": "./dist/api-clients/media-api.generated.js",
      "types": "./dist/api-clients/media-api.generated.d.ts"
    },
    "./api-clients/inventory": {
      "default": "./dist/api-clients/inventory-api.generated.js",
      "require": "./dist/api-clients/inventory-api.generated.js",
      "types": "./dist/api-clients/inventory-api.generated.d.ts"
    },
    "./api-clients/api-client.service": {
      "default": "./dist/api-clients/api-client.service.js",
      "require": "./dist/api-clients/api-client.service.js",
      "types": "./dist/api-clients/api-client.service.d.ts"
    },
    "./events": {
      "default": "./dist/events/index.js",
      "require": "./dist/events/index.js",
      "types": "./dist/events/index.d.ts"
    },
    "./pipes": {
      "default": "./dist/pipes/index.js",
      "require": "./dist/pipes/index.js",
      "types": "./dist/pipes/index.d.ts"
    },
    "./types": {
      "default": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc -b -v --watch",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "openapi": "npm run openapi:user && npm run openapi:products && npm run openapi:media && npm run openapi:inventory",
    "openapi:user": "openapi-typescript http://localhost:3001/api/docs/json --output src/api-clients/users-api.generated.ts",
    "openapi:products": "openapi-typescript http://localhost:3002/api/docs/json --output src/api-clients/products-api.generated.ts",
    "openapi:media": "openapi-typescript http://localhost:3003/api/docs/json --output src/api-clients/media-api.generated.ts",
    "openapi:inventory": "openapi-typescript http://localhost:3004/api/docs/json --output src/api-clients/inventory-api.generated.ts",
    "openapi:orders": "openapi-typescript http://localhost:3005/api/docs/json --output src/api-clients/orders-api.generated.ts"
  },
  "dependencies": {
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.0",
    "amqplib": "^0.10.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jwks-rsa": "^3.2.0",
    "openapi-fetch": "^0.14.0",
    "openapi-typescript": "^7.9.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "@nestjs/axios": "^4.0.*",
    "@nestjs/common": "^11.0.*",
    "@nestjs/config": "^4.0.*",
    "@nestjs/core": "^11.0.*",
    "@s3pweb/keycloak-admin-client-cjs": "^26.3.*",
    "class-transformer": "^0.5.*",
    "class-validator": "^0.14.*",
    "jose": "^5.10.*",
    "openid-client": "^5.6.*"
  },
  "devDependencies": {
    "@chill-microservice/eslint-config": "workspace:*",
    "@eslint/js": "^9.29.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/amqplib": "^0.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "eslint": "^9.29.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
